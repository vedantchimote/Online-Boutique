{
  "name": "online-boutique-docs",
  "version": "1.0.0",
  "description": "Mintlify documentation for Online Boutique microservices demo",
  "scripts": {
    "dev": "mintlify dev",
    "build": "mintlify build",
    "validate": "node scripts/validate-mint-json.js && node scripts/validate-mdx.js && node scripts/validate-links.js",
    "validate:mint": "node scripts/validate-mint-json.js",
    "validate:mdx": "node scripts/validate-mdx.js",
    "validate:links": "node scripts/validate-links.js",
    "test": "jest",
    "test:unit": "jest __tests__/unit",
    "test:properties": "jest __tests__/properties",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:all": "npm run validate && npm test"
  },
  "keywords": [
    "microservices",
    "kubernetes",
    "gcp",
    "documentation",
    "mintlify"
  ],
  "author": "Google Cloud Platform",
  "license": "Apache-2.0",
  "devDependencies": {
    "@mdx-js/mdx": "^3.0.0",
    "@mermaid-js/mermaid-cli": "^10.6.1",
    "ajv": "^8.12.0",
    "fast-check": "^3.15.0",
    "glob": "^10.3.10",
    "gray-matter": "^4.0.3",
    "jest": "^29.7.0",
    "mintlify": "^4.0.0",
    "remark": "^15.0.1",
    "remark-mdx": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
